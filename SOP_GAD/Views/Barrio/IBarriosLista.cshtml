@model List<SOP_GAD.Models.Barrio>
@{
    ViewBag.Title = "Listado de Barrios";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="~/Assets/CSS/Tablas.css" rel="stylesheet" type="text/css">
<link href="~/Assets/CSS/Contenido.css" rel="stylesheet" type="text/css">
<script src="~/Assets/JS/Tablas.js" type="text/javascript" ></script>

<ol class="breadcrumb">
    <li><a href="~/Home/Index"><i class="fa fa-hand-o-left" aria-hidden="true"></i>  Atrás</a></li>
    <li class="active">
        Barrio a buscar <input id="searchTerm" type="text" onkeyup="doSearch()" />
    </li>
    <label class="Derecha_content">
        @Html.ActionLink("Agregar Barrio", "IBarrioIngreso", "Barrio")
    </label>
</ol>
@*<form>
    Cadena a buscar <input id="searchTerm" type="text" onkeyup="doSearch()" />
</form>*@

<h2 class="headertekst">Lista de Barrios</h2>

<table id="mitabla" class="Centrar_content">
    <thead >
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Numero Población</th>
            <th>Modifiar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            
            <tr>
                <td>@a.IdBarrio</td>
                <td>@a.NombreBarrio</td>
                <td>@a.PoblacionBarrio</td>
                <td>@Html.ActionLink("Modificar", "IBarrioIngreso", "Barrio", new { id = @a.IdBarrio },null)</td>
            </tr>
        }
    </tbody>
    
    <tfoot>
        <tr>
            <th class="derecha">Total de barrios: </th>
            <th colspan="3">@Model.Count()</th>
        </tr>
    </tfoot>

</table>
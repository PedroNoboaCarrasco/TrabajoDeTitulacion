@model SOP_GAD.Models.InformePreguntaR

@{
    ViewBag.Title = Model.IdInformePR > 0 ? Model.NumeroInformePR : "Nuevo Registro";

}
<script src="~/Assets/JS/Validaciones.js" type="text/javascript"></script>

<ol class="breadcrumb">
    <li><a href="~/SeguimientoObras/ISeguimientoObrasLista/@ViewBag.IdObra"><i class="fa fa-hand-o-left" aria-hidden="true"></i>  Atrás</a></li>
    <li class="active">@(Model.IdInformePR > 0 ? Model.NumeroInformePR : "Nuevo Registro")</li>
</ol>

<h2 class="headertekst">Ingrese la información del Informe de Aclaraciones</h2>


@using (Html.BeginForm("Guardar", "InformeAclaraciones", FormMethod.Post, new { id = "frm-aclaracion" }))
{
    @Html.HiddenFor(x => x.IdInformePR)
    <div class="panel panel-default">
        <div class="panel-heading">Información del barrio</div>
        <div class="panel-body">
            @*Inputs*@
            <div class="form-group">
                @Html.Label("Numero de Informe", new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(x => x.NumeroInformePR, new { @class = "formcontrol", @placeholder = "Código del Acta de Aclaraciones", @onKeyUp = "this.value=this.value.toUpperCase()", @required = "required" })
                @Html.ValidationMessageFor(x => x.NumeroInformePR, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Lugar donde se emite", new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(x => x.LugarInformePR, new { @class = "formcontrol", @placeholder = "Cubijíes", @onkeypress = "return controlLetra(event)", @required = "required" })
                @Html.ValidationMessageFor(x => x.LugarInformePR, null, new { @class = "label label-danger" })
            </div>

            @if (Model.IdInformePR > 0)
            {
                <div class="form-group">
                    @Html.Label("Fecha", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.FechaInformePR, new { @class = "formcontrol", @placeholder = "2018-06-30", @required = "required" })
                    @Html.ValidationMessageFor(x => x.FechaInformePR, null, new { @class = "label label-danger" })
                </div>

                <div style="display:none;">
                    @Html.Label("Obra Publica", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.IdObraPublica, new { @class = "formcontrol", @placeholder = "Obra", @required = "required" })
                    @Html.ValidationMessageFor(x => x.IdObraPublica, null, new { @class = "label label-danger" })
                </div>
            }
            else
            {
                <div class="form-group">
                    @Html.Label("Fecha", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.FechaInformePR, new { @class = "formcontrol date", type = "date", @required = "required" })
                    @Html.ValidationMessageFor(x => x.FechaInformePR, null, new { @class = "label label-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    @Html.Label("Obra Publica", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.IdObraPublica, new { @Value = @ViewBag.IdObra, @class = "formcontrol", @placeholder = "Obra", @required = "required" })
                    @Html.ValidationMessageFor(x => x.IdObraPublica, null, new { @class = "label label-danger" })
                </div>
            }

                <div class="form-group">
                    @Html.Label("Hora de emisión", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.Hora, new { @class = "formcontrol date", type = "time", @required = "required" })
                    @Html.ValidationMessageFor(x => x.Hora, null, new { @class = "label label-danger" })
                </div>

              
               @*@Html.DisplayForModel();*@
               @*, @type = "hidden"*@
               @*@Html.EditorForModel();*@

        </div>
    </div>

    <div class="form-group ">
        <div class="Centrar_content">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>

}
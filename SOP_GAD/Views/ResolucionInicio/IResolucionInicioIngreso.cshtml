@model SOP_GAD.Models.ResolucionInicio
@{
    ViewBag.Title = Model.IdResolucionI > 0 ? Model.NumeroResolucionI : "Nuevo Registro";
}

<link href="~/Assets/CSS/Contenido.css" rel="stylesheet" type="text/css">
<script src="~/Assets/JS/Validaciones.js" type="text/javascript"></script>

<ol class="breadcrumb">
    <li><a href="~/SeguimientoObras/ISeguimientoObrasLista/@ViewBag.IdObra"><i class="fa fa-hand-o-left" aria-hidden="true"></i>  Atrás</a></li>
    <li class="active">@(Model.IdResolucionI > 0 ? Model.NumeroResolucionI : "Nuevo Registro")</li>
</ol>

<h2 class="headertekst">Ingrese la información de la Resolución Inicial</h2>

@using (Html.BeginForm("Guardar", "ResolucionInicio", FormMethod.Post, new { id = "frm-resolucioninicio" }))
{
    @Html.HiddenFor(x => x.IdResolucionI)
    <div class="panel panel-default">
      <div class="panel-heading">Información de Resolución de Inicio</div>
        <div class="panel-body">

            @*Inputs*@
            <div class="form-group">
                @Html.Label("Numero de Resolución Administrativa", new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(x => x.NumeroResolucionI, new { @class = "formcontrol", @placeholder = "Numero de Resolución Administrativa", @onKeyUp = "this.value=this.value.toUpperCase()", @required = "required" })
                @Html.ValidationMessageFor(x => x.NumeroResolucionI, null, new { @class = "label label-danger" })
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Articulo", new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(x => x.Articulo, new { @class = "formcontrol", @placeholder = "Número del Articulo según la Ley Organica del Sistema Nacional de Contratación Pública", @maxlength = 3, @onkeypress = "return validarNumeroEn(event)", @required = "required" })
                @Html.ValidationMessageFor(x => x.Articulo, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Nombre del Analista", new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(x => x.NombreAnalista, new { @class = "formcontrol", @placeholder = "Nombre del Analista", @maxlength = 40, @onkeypress = "return controlLetra(event)", @required = "required" })
                @Html.ValidationMessageFor(x => x.NombreAnalista, null, new { @class = "label label-danger" })
            </div> 
            
            @if (Model.IdResolucionI > 0)
            {
                <div style="display:none;">
                    @Html.Label("Obra Publica", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.IdObraPublica, new { @class = "formcontrol", @placeholder = "Obra", @required = "required" })
                    @Html.ValidationMessageFor(x => x.IdObraPublica, null, new { @class = "label label-danger" })
                </div>
            }
            else
            {
                <div class="form-group" style="display:none;">
                    @Html.Label("Obra Publica", new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(x => x.IdObraPublica, new { @Value = @ViewBag.IdObra, @class = "formcontrol", @placeholder = "Obra", @required = "required" })
                    @Html.ValidationMessageFor(x => x.IdObraPublica, null, new { @class = "label label-danger" })
                </div>
            }

        </div>
    </div>
    <div class="form-group ">
        <div class="Centrar_content">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>

}